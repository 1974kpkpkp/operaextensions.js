{
  "name": "Opera Extension API Test - Messaging",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Opera Messaging API Test Extension",
  "background": {
      "page": "background.html"
  },
  "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["/operaextensions_injectedscript.js", "/content-script.js"],
        "run_at":"document_start"
      }
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}