{
  "name": "Opera Extension API Test - widget.* API",
  "version": "1.0",
  "manifest_version": 2,
  "description": "widget.* API Test Extension",
  "background": {
      "page": "background.html"
  },
  "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["/operaextensions_injectedscript.js", "/content-script.js"],
        "run_at":"document_start"
      }
  ],
  "permissions": [
    "tabs", "webRequest", "webRequestBlocking", "contextMenus", "<all_urls>"
  ]
}
