{
  "name": "002 - back broadCast both",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Please click on the button after the tabs finish loading. Once the popup loads, a broadcast will be sent out.",
  "background": {
      "page": "background.html"
  },
  "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["/operaextensions_injectedscript.js", "/oex/includes/base.js"]
      }
  ],
  "browser_action": {},
  "permissions": [
    "tabs", "http://*/*","https://*/*", "contextMenus"
  ]
}