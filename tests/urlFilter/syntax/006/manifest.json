{
  "name": "tc-url-filter-syntax-006",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Wildcard syntax in the allow list, matching any host",
  "background": {
      "page": "background.html"
  },
  "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["/operaextensions_injectedscript.js", "/oex/includes/urlfilter.js"]
      }
  ],
  "permissions": [
    "tabs", "http://*/*","https://*/*", "webRequest", "webRequestBlocking", "contextMenus"
  ]
}
