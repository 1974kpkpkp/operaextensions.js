{
  "name": "tc-extensions-url-filter-add-004",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Adding rules to the allow list, check matching URL is not blocked.",
  "background": {
      "page": "background.html"
  },
  "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["/operaextensions_injectedscript.js", "/oex/includes/urlfilter.js"]
      }
  ],
  "permissions": [
    "tabs", "http://*/*","https://*/*", "webRequest", "webRequestBlocking"
  ]
}